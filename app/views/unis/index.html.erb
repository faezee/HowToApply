<p id="notice"><%= notice %></p>

<h1>Listing Unis</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unis.each do |uni| %>
      <tr>
        <td><%= uni.name %></td>
        <td><%= link_to 'Show', uni %></td>
        <td><%= link_to 'Edit', edit_uni_path(uni) %></td>
        <td><%= link_to 'Destroy', uni, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Uni', new_uni_path %>
